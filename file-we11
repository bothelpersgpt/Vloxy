<body>

  <h2>Welcome to the Dashboard</h2>

  <div id="usernameDisplay"></div>

  <a id="signupLink" href="/signup">Signup or Login</a>

  <button id="playGameButton">Play Game</button>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Check if user credentials are stored
      var storedCredentials = localStorage.getItem("userCredentials");

      if (storedCredentials) {
        // User is logged in, display username
        var usernameDisplay = document.getElementById("usernameDisplay");
        usernameDisplay.textContent = "Hello, " + JSON.parse(storedCredentials).username + "!";
      } else {
        // User is not logged in, provide link to signup/login
        var signupLink = document.getElementById("signupLink");
        signupLink.textContent = "Signup or Login";
      }

      // Add event listener to the play game button
      var playGameButton = document.getElementById("playGameButton");
      playGameButton.addEventListener("click", function() {
        // Redirect to the "/game" page when the button is clicked
        window.location.href = "/game";
      });
    });
  </script>
  <script src="Node.js"></script>
  <script src="file.js"></script>

</body>
